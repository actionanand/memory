<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @memory.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @memory.body %>
</p>
<div class="votes">
  <% if current_user.liked? @memory %>
    <%= render 'unfav_link', memory: @memory %>
  <% else %>
    <%= render 'fav_link', memory: @memory %>
  <% end %>
  <span class="count"><%= @memory.votes_for.size %></span>
</div>

<p>
  <small>Submitted <%= time_ago_in_words(@memory.created_at) %> ago</small>
  By
  <strong>
  <%= @memory.user.email.split('@') [0].capitalize %>
  </strong>
</p>

<%= link_to 'Edit', edit_memory_path(@memory) %> |
<%= link_to 'Back', memories_path %>

<h3>Comments</h3>

<%= form_for [@memory, Comment.new] do |f| %>
<%= f.text_area :body, placeholder: "Add a comment" %><br/>
<%= f.submit "Add Comment" %>
<% end %>

<ul>
  <%= render(partial: 'comments/comment', collection: @memory.comments) %>
</ul>
